{
  "name": "mirco",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development concurrently \"nodemon server.js\" \"vite  --config vite.config.js --open\"",
    "game-dev": "NODE_ENV=development concurrently \"nodemon server.js\" \"vite --config vite.config.js --open '/?game=$npm_config_game&suppress-splash=true'\"",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "NODE_ENV=production node server.js",
    "start": "npm run build && npm run serve",
    "format": "prettier . --write",
    "dev-rcade": "concurrently \"vite --config vite.config.rcade.js --port 5173 --strictPort\" \"rcade dev http://localhost:5173\"",
    "build-rcade": "vite build --config vite.config.rcade.js"
  },
  "dependencies": {
    "@rcade/plugin-input-classic": "^0.2.1",
    "express": "^4.18.2",
    "howler": "^2.2.4",
    "p5": "^2.0.2"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "nodemon": "^3.0.0",
    "prettier": "^3.5.3",
    "rcade": "^0.0.19",
    "vite": "^6.3.5",
    "vite-plugin-live-reload": "^3.0.4"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  }
}